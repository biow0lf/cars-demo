<div class="row">
  <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 col-xxl-12">
    <div class="row">
      <div class="col-6">
        <h1 class="text-primary m-auto">Sell car: <%= "#{@car.make} / #{@car.model} (##{@car.id})" %></h1>
      </div>
      <div class="col-6 text-end m-auto">
        <%= link_to("Back to car", car_path(@car), class: "btn btn-primary") %>
        <%= link_to("Back to cars", cars_path, class: "btn btn-primary") %>
      </div>
    </div>

    <%= render "form", car: @car, people: @people %>
  </div>
</div>
